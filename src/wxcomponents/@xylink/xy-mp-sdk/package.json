{
  "name": "@xylink/xy-mp-sdk",
  "version": "3.9.0",
  "description": "XYLink MP SDK",
  "main": "package/index.js",
  "types": "package/index.d.ts",
  "miniprogram": "package",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --config ./scripts/webpack.sdk.js",
    "build": "cross-env NODE_ENV=production webpack --config ./scripts/webpack.sdk.js",
    "lint-fix": "eslint --ext .ts --fix .",
    "lint-staged": "lint-staged",
    "add:husky": "husky install && husky add .husky/pre-commit 'npm run lint-staged'"
  },
  "keywords": [
    "XYLink WeChat SDK",
    "小鱼易连小程序SDK",
    "@xylink/xy-mp-sdk",
    "xy-mp-sdk",
    "xylink-sdk",
    "小鱼WebRTC SDK"
  ],
  "author": "Luojinghui",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@types/clone-deep": "^4.0.1",
    "@types/wechat-miniprogram": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "babel-loader": "^8.2.5",
    "clone-deep": "^4.0.1",
    "core-js": "^3.25.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "js-base64": "^3.7.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "jszip": "3.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix && npm run lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx,css,.sass,.scss,md}": [
      "prettier --write"
    ],
    "package/component/**/*.{js,json}": [
      "prettier --write"
    ],
    "pages/component/**/*.{js,jsx,json,ts,tsx,css,.sass,.scss,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "merge"
      ]
    }
  }
}
